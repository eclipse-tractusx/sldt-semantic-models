@prefix samm: <urn:samm:org.eclipse.esmf.samm:meta-model:2.1.0#> .
@prefix samm-c: <urn:samm:org.eclipse.esmf.samm:characteristic:2.1.0#> .
@prefix samm-e: <urn:samm:org.eclipse.esmf.samm:entity:2.1.0#> .
@prefix unit: <urn:samm:org.eclipse.esmf.samm:unit:2.1.0#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix : <urn:samm:io.catenax.material:1.0.0#> .
@prefix ext-common: <urn:samm:io.catenax.shared.industry_core.common:1.0.0#> .
@prefix samm-u: <urn:samm:org.eclipse.esmf.samm:unit:2.1.0#> .

:Composition a samm:Aspect ;
   samm:preferredName "composition"@en ;
   samm:description "Describes the material shares of a digital twin."@en ;
   samm:properties ( :materials ext-common:globalAssetId ) ;
   samm:operations ( ) ;
   samm:events ( ) .

:materials a samm:Property ;
   samm:preferredName "materials"@en ;
   samm:description "List of all materials."@en ;
   samm:characteristic :MaterialsCharacteristic .

:MaterialsCharacteristic a samm:Characteristic ;
   samm:preferredName "materials characteristic"@en ;
   samm:description "materials characteristic"@en ;
   samm:dataType :MaterialEntity .

:MaterialEntity a samm:Entity ;
   samm:preferredName "material entity"@en ;
   samm:description "Materials shares of a digital twin."@en ;
   samm:properties ( :materialWeight ext-common:globalAssetId ) .

:materialWeight a samm:Property ;
   samm:preferredName "material weight"@en ;
   samm:description "Weight of a material in a part."@en ;
   samm:characteristic :WeightCharacteristic ;
   samm:exampleValue "15.11"^^xsd:float .

:WeightCharacteristic a samm-c:Measurement ;
   samm:preferredName "weight characteristic"@en ;
   samm:description "Weight Characteristic"@en ;
   samm:dataType xsd:float ;
   samm-c:unit samm-u:kilogram .

