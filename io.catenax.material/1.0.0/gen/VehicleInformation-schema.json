{
  "$schema" : "http://json-schema.org/draft-04/schema",
  "x-samm-aspect-model-urn" : "urn:samm:io.catenax.material:1.0.0#VehicleInformation",
  "description" : "The VehicleInformation aspect model defines a standardized and interoperable set of vehicle attributes, including identification data, technical properties and classification information, to describe a vehicle in a consistent and machine-readable manner.",
  "type" : "object",
  "components" : {
    "schemas" : {
      "Text" : {
        "type" : "string",
        "x-samm-aspect-model-urn" : "urn:samm:org.eclipse.esmf.samm:characteristic:2.2.0#Text",
        "description" : "Describes a Property which contains plain text. This is intended exclusively for human readable strings, not for identifiers, measurement values, etc."
      },
      "MassCharacteristic" : {
        "type" : "number",
        "x-samm-aspect-model-urn" : "urn:samm:io.catenax.material:1.0.0#MassCharacteristic",
        "description" : "Characteric for mass data (in kg)."
      },
      "Date" : {
        "type" : "string",
        "format" : "date",
        "x-samm-aspect-model-urn" : "urn:samm:io.catenax.material:1.0.0#Date",
        "description" : "Characteristic to ensure a consistent structure for date-related properties."
      },
      "VehicleTypeEnum" : {
        "type" : "string",
        "x-samm-aspect-model-urn" : "urn:samm:io.catenax.material:1.0.0#VehicleTypeEnum",
        "description" : "Enumeration of vehicle types according to EG Vehicle Classification.",
        "enum" : [ "Electric and Hybrid Vehicles (Other than passenger cars)", "Special Purpose Vehicles", "Off-Road Vehicles / SUVs", "Motorcycles and Scooters", "Buses and Coaches", "Heavy Trucks / Lorries", "Light Commercial Vehicles (LCVs)", "Passenger Cars - Hybrid", "Passenger Cars - Electric Vehicle (EV)", "Passenger Cars - Internal Combustion Engine (ICE)" ]
      },
      "WasteCodeEnum" : {
        "type" : "string",
        "x-samm-aspect-model-urn" : "urn:samm:io.catenax.material:1.0.0#WasteCodeEnum",
        "description" : "Enumeration of waste codes according to EWC (european waste directory).",
        "enum" : [ "16 01 99", "16 01 22", "16 01 21", "16 01 16", "16 01 15", "16 01 14", "16 01 13", "16 01 12", "16 01 11", "16 01 10", "16 01 09", "16 01 08", "16 01 07", "16 01 06", "16 01 04", "16 01 03" ]
      },
      "UuidV4Trait" : {
        "type" : "string",
        "x-samm-aspect-model-urn" : "urn:samm:io.catenax.shared.uuid:2.0.0#UuidV4Trait",
        "description" : "The provided regular expression ensures that the UUID is composed of five groups of characters separated by hyphens, in the form 8-4-4-4-12 for a total of 36 characters (32 hexadecimal characters and 4 hyphens), optionally prefixed by \"urn:uuid:\" to make it an IRI.",
        "pattern" : "(^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$)|(^urn:uuid:[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$)"
      }
    }
  },
  "properties" : {
    "vehicleCondition" : {
      "description" : "Condition of the actual vehicle.",
      "x-samm-aspect-model-urn" : "urn:samm:io.catenax.material:1.0.0#vehicleCondition",
      "$ref" : "#/components/schemas/Text"
    },
    "driveType" : {
      "description" : "Drive type of a vehicle according enumeration.",
      "x-samm-aspect-model-urn" : "urn:samm:io.catenax.material:1.0.0#driveType",
      "$ref" : "#/components/schemas/Text"
    },
    "modelIdentifier" : {
      "description" : "OEM-specific model identifier or OEM-specific project name.",
      "x-samm-aspect-model-urn" : "urn:samm:io.catenax.material:1.0.0#modelIdentifier",
      "$ref" : "#/components/schemas/Text"
    },
    "vehicleSeries" : {
      "description" : "Series information of the vehicle model that needs to be processed.",
      "x-samm-aspect-model-urn" : "urn:samm:io.catenax.material:1.0.0#vehicleSeries",
      "$ref" : "#/components/schemas/Text"
    },
    "oem" : {
      "description" : "Original equipment manufacturer.",
      "x-samm-aspect-model-urn" : "urn:samm:io.catenax.material:1.0.0#oem",
      "$ref" : "#/components/schemas/Text"
    },
    "emptyWeight" : {
      "description" : "The empty weight of the vehicle in kg as specified.",
      "x-samm-aspect-model-urn" : "urn:samm:io.catenax.material:1.0.0#emptyWeight",
      "$ref" : "#/components/schemas/MassCharacteristic"
    },
    "productionDate" : {
      "description" : "Production date of the vehicle.",
      "x-samm-aspect-model-urn" : "urn:samm:io.catenax.material:1.0.0#productionDate",
      "$ref" : "#/components/schemas/Date"
    },
    "vehicleType" : {
      "description" : "A vehicle type is a classification of a vehicle based on its design, construction, and purpose.",
      "x-samm-aspect-model-urn" : "urn:samm:io.catenax.material:1.0.0#vehicleType",
      "$ref" : "#/components/schemas/VehicleTypeEnum"
    },
    "anonymizedVin" : {
      "description" : "OEM-specific hashed VIN.",
      "x-samm-aspect-model-urn" : "urn:samm:io.catenax.material:1.0.0#anonymizedVin",
      "$ref" : "#/components/schemas/Text"
    },
    "wasteCode" : {
      "description" : "The waste code is used to identify the type of waste on part or material level.",
      "x-samm-aspect-model-urn" : "urn:samm:io.catenax.material:1.0.0#wasteCode",
      "$ref" : "#/components/schemas/WasteCodeEnum"
    },
    "globalAssetId" : {
      "description" : "The fully anonymous ID in the dataspace of the part.",
      "x-samm-aspect-model-urn" : "urn:samm:io.catenax.shared.industry_core.common:1.0.0#globalAssetId",
      "$ref" : "#/components/schemas/UuidV4Trait"
    }
  },
  "required" : [ "vehicleCondition", "driveType", "modelIdentifier", "vehicleSeries", "oem", "emptyWeight", "productionDate", "vehicleType", "anonymizedVin", "wasteCode", "globalAssetId" ]
}