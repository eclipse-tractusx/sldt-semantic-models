            "x-samm-aspect-model-urn" : "urn:samm:io.catenax.requirement:1.0.0#foreignId",
            "$ref" : "#/components/schemas/Text"
          },
          "longname" : {
            "description" : "Descriptive name for the requirement.",
            "x-samm-aspect-model-urn" : "urn:samm:io.catenax.requirement:1.0.0#longname",
            "$ref" : "#/components/schemas/Text"
          },
          "metadata" : {
            "description" : "Additional metadata that is associated with the requirement and not standardized in the aspect model.",
            "x-samm-aspect-model-urn" : "urn:samm:io.catenax.requirement:1.0.0#metadata",
            "$ref" : "#/components/schemas/MetadataList"
          },
          "specification" : {
            "description" : "Link to the specification document.",
            "x-samm-aspect-model-urn" : "urn:samm:io.catenax.requirement:1.0.0#specification",
            "$ref" : "#/components/schemas/SpecificationList"
