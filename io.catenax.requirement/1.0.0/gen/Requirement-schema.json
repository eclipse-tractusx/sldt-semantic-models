{
  "$schema" : "http://json-schema.org/draft-04/schema",
  "x-samm-aspect-model-urn" : "urn:samm:io.catenax.requirement:1.0.0#Requirement",
  "description" : "Aspect model for requirements.",
  "type" : "object",
