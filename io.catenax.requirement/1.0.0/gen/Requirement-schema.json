        "pattern" : "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
      },
      "VersionCharacteristic" : {
        "description" : "Characteristic for the version",
        "x-samm-aspect-model-urn" : "urn:samm:io.catenax.requirement:1.0.0#VersionCharacteristic",
        "type" : "object",
        "properties" : {
          "versionNumber" : {
            "description" : "Semantic version of the requirement",
            "x-samm-aspect-model-urn" : "urn:samm:io.catenax.requirement:1.0.0#versionNumber",
            "$ref" : "#/components/schemas/VersionNumberTrait"
          },
          "versionId" : {
            "description" : "The identifier of this exact version of the requirement represented by a UUID, valid for the Catena-X dataspace.",
