@prefix samm: <urn:samm:org.eclipse.esmf.samm:meta-model:2.1.0#> .
@prefix samm-c: <urn:samm:org.eclipse.esmf.samm:characteristic:2.1.0#> .
@prefix samm-e: <urn:samm:org.eclipse.esmf.samm:entity:2.1.0#> .
@prefix unit: <urn:samm:org.eclipse.esmf.samm:unit:2.1.0#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix : <urn:samm:io.catenax.shared.material_classification:1.0.0#> .
@prefix samm-u: <urn:samm:org.eclipse.esmf.samm:unit:2.1.0#> .

:materialCategory a samm:Property ;
   samm:preferredName "material category"@en ;
   samm:description "The highest-level classification that groups materials into broad, fundamental classes based on their overall nature and fundamental properties."@en ;
   samm:characteristic samm-c:Text ;
   samm:exampleValue "1" .

:materialGroup a samm:Property ;
   samm:preferredName "material group"@en ;
   samm:description "A more specific subdivision within a Material Category. It organizes materials into technical families that share similar composition, structure, and performance characteristics."@en ;
   samm:characteristic samm-c:Text ;
   samm:exampleValue "1.1" .

:materialSubgroup a samm:Property ;
   samm:preferredName "material subgroup"@en ;
   samm:description "A refined subset of a Material Group that classifies materials according to detailed technical distinctions such as alloying type, polymer family, manufacturing process, or functional properties."@en ;
   samm:characteristic samm-c:Text ;
   samm:exampleValue "1.1.1" .

:ClassificationStandardEnumeration a samm-c:Enumeration ;
   samm:preferredName "classification standard enumeration"@en ;
   samm:description "This enumeration assures that only allowed classification standards are used."@en ;
   samm:dataType xsd:string ;
   samm-c:values ( "VDA 231-106" "IMDS" ) .

:MaterialClassificationCharacteristic a samm:Characteristic ;
   samm:preferredName "material classification characteristic"@en ;
   samm:description "This characteristic binds the MaterialClassificationEntity to the materialClassification property."@en ;
   samm:dataType :MaterialClassificationEntity .

:materialClassification a samm:Property ;
   samm:preferredName "material classification"@en ;
   samm:description "Classification of the material according to defined standards."@en ;
   samm:characteristic :MaterialClassificationCharacteristic .

:MaterialClassificationEntity a samm:Entity ;
   samm:preferredName "material classification entity"@en ;
   samm:description "This entity groups material classification properties."@en ;
   samm:properties ( :materialSubgroup :materialGroup :materialCategory :classificationStandard ) .

:classificationStandard a samm:Property ;
   samm:preferredName "classification standard"@en ;
   samm:description "Standard according to which the material is classified."@en ;
   samm:characteristic :ClassificationStandardEnumeration ;
   samm:exampleValue "IMDS" .

